<Window x:Class="BookEr.Desktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:BookEr.Desktop.View"
        mc:Ignorable="d"
        Title="BookEr" Height="800" Width="1200">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <i:InvokeCommandAction Command="{Binding RefreshBooksCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Refresh books" Command="{Binding RefreshBooksCommand}" />
            <MenuItem Header="_Logout" Command="{Binding LogoutCommand}" />
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0">
                <GroupBox.Header>
                    <Label Content="Books:" />
                </GroupBox.Header>
                <DataGrid ItemsSource="{Binding Books}"
                      VerticalContentAlignment="Stretch"  IsReadOnly="True"
                      AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedBook}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Image">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Image}" Height="80" Width="60" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*" />
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="*" />
                        <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBox Width="250"  Height="21" Margin="5" Text="{Binding SelectedBookTitle, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                <Button Width="73"  Height="21" Margin="5" Content="Add Book" Command="{Binding AddBookCommand}" />
            </StackPanel>
            <GroupBox Grid.Row="2">
                <GroupBox.Header>
                    <Label Content="Volumes:" />
                </GroupBox.Header>
                <DataGrid VerticalContentAlignment="Stretch" ItemsSource="{Binding Volumes}" IsReadOnly="True"
                      AutoGenerateColumns="False" SelectedItem="{Binding SelectedVolume}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding VolumeSelectCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Library id" Binding="{Binding LibraryId}"/>
                        <DataGridTemplateColumn Header="Available">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsAvailable}" IsEnabled="false"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Current User" Binding="{Binding CurrentUser, TargetNullValue='-'}"/>
                        <DataGridTextColumn Header="Current Deadline" Binding="{Binding CurrentDeadline, TargetNullValue='-',StringFormat={}{0:yyyy/MM/dd}}"/>
                        <DataGridTextColumn Header="Next borrow start date" Binding="{Binding NextBorrow, TargetNullValue='-',StringFormat={}{0:yyyy/MM/dd}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button Width="73"  Height="21" Margin="5" Content="Add Volume" Command="{Binding AddVolumeCommand}" />
                <Button Width="90"  Height="21" Margin="5" Content="Delete Volume" Command="{Binding DeleteVolumeCommand}" />
                <Button Width="90"  Height="21" Margin="5" Content="Show Borrows" Command="{Binding ShowBorrowsCommand}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
