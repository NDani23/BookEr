<Window x:Class="BookEr.Desktop.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookEr.Desktop.View"
        xmlns:viewModel="clr-namespace:BookEr.Desktop.ViewModel"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=txtName}"
        Title="BookEr - Register" Height="auto" Width="250"
        ResizeMode="NoResize" SizeToContent="Height" >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Name="txtName"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="1" Grid.Column="0" Content="Username:" />
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="txtUserName"
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />


        <Label Grid.Row="2" Grid.Column="0" Content="Email:" />
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Name="txtEmail"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="3" Grid.Column="0" Content="Phone Number:" />
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Name="txtPhone"
                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="4" Grid.Column="0" Content="Password:" />
        <PasswordBox Grid.Row="4" Grid.Column="1" Margin="5"
            x:Name="password" viewModel:PasswordBoxAssistant.BindPassword="true"
                     viewModel:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="5" Grid.Column="0" Content="Repeat password:" />
        <PasswordBox Grid.Row="5" Grid.Column="1" Margin="5"
            x:Name="passwordRepeated" viewModel:PasswordBoxAssistant.BindPassword="true"
                     viewModel:PasswordBoxAssistant.BoundPassword="{Binding Path=PasswordRepeated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Register"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="2"  Margin="5"
                IsDefault="True" Width="60"
                Command="{Binding RegisterCommand}"/>
    </Grid>
</Window>
