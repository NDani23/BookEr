<Window x:Class="BookEr.Desktop.View.BorrowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:BookEr.Desktop.View"
        mc:Ignorable="d"
        Title="BookEr" Height="400" Width="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{Binding SelectedBook.Title}"/>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0">
                <GroupBox.Header>
                    <Label Content="Borrows:" />
                </GroupBox.Header>
                <DataGrid ItemsSource="{Binding Borrows}"
                      VerticalContentAlignment="Stretch"  IsReadOnly="True"
                      AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedBorrow}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User Name" Binding="{Binding UserName}" Width="*" />
                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDay, StringFormat={}{0:yyyy/MM/dd}}" />
                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDay, StringFormat={}{0:yyyy/MM/dd}}" />
                        <DataGridTemplateColumn Header="Active" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsActive}" IsEnabled="false"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Width="150"  Height="21" Margin="5" Content="Change Active State" Command="{Binding ChangeActiveStateCommand}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
